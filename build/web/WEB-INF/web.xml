    <servlet>
        <servlet-name>Register_servlet</servlet-name>
        <servlet-class>com.blog.ControllerServlet.Register_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.blog.ControllerServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout_Servlet</servlet-name>
        <servlet-class>com.blog.ControllerServlet.Logout_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ADD_POST_SERVLET</servlet-name>
        <servlet-class>com.blog.ControllerServlet.ADD_POST_SERVLET</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.blog.ControllerServlet.UpdateServlet</servlet-class>
