        <servlet-name>Add_category</servlet-name>
        <url-pattern>/Add_category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update_post_servlet</servlet-name>
        <url-pattern>/Update_post_servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete_Servlet</servlet-name>
        <url-pattern>/Delete_Servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
